                <input type="email" class="form-control" id="inputEmail"
                    aria-describedby="emailHelp" placeholder="Enter your email">
            </div>
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputPhone">Phone</label>
                <input type="text" class="form-control" placeholder="Enter your phone number" id="inputPhone">
            </div>
            <div class="form-group">
                <label for="textAreaMessage" class="form-label mt-4">Message</label>
                <textarea class="form-control" id="textAreaMessage" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Let it go!</button>
        </div>
    </div>
</section>


